[flake8]
max-line-length = 127
max-complexity = 10
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F821,  # undefined name (handled by mypy)
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .tox,
    .mypy_cache,
    docs,
per-file-ignores =
    __init__.py:F401  # imported but unused (module imports)